.quiz-card {
  width: 250px;
  background-color: #ebfeff;
  border-radius: 10px;
  border: 2px solid #0085a3;
  padding: 20px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.25);
  text-align: center;
}
.quiz-card .button-wrapper button {
  width: 100%;
  height: 40px;
  margin: 5px 0;
  color: #fff;
  background: linear-gradient(90deg, #56ccff, #6eafb4);
  border: 3px solid #fff;
  box-shadow: 1px 2px 0 rgba(0, 0, 0, 0.1);
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.25);
  position: relative;
}
.quiz-card .button-wrapper button.correct {
  background: linear-gradient(90deg, #56ffa4, #59bc86);
}
.quiz-card .button-wrapper button.correct::before {
  content: '\e645';
  font-family: cuIcon;
  position: absolute;
  right: 5px;
}
.quiz-card .button-wrapper button.wrong {
  background: linear-gradient(90deg, #ff5656, #c16868);
}
.quiz-card .button-wrapper button.wrong::before {
  content: '\e646';
  font-family: cuIcon;
  position: absolute;
  right: 5px;
}

